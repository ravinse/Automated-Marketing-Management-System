# MongoDB Configuration
MONGO_URI=mongodb+srv://your_user:your_password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_secret_key_here

# Server Configuration
PORT=5001
NODE_ENV=development

# Scheduler Configuration
# Set to 'true' for local development, 'false' for production (use Railway Cron Jobs instead)
ENABLE_SCHEDULERS=true

# Cron Job Security (for Railway deployment)
# Generate a secure random string: openssl rand -hex 32
# CRON_SECRET=your_secure_random_string_here

# Database Configuration for Customer Segmentation
SEGMENTATION_DB=retail_db
SEGMENTATION_COLLECTION=customer_segmentation
ORDERS_COLLECTION=newdatabase

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5174
VITE_API_BASE_URL=http://localhost:5001/api

# Email Service Configuration (for sending campaign emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Marketing System

# SMS Service Configuration (Twilio - optional, for SMS campaigns)
# To enable SMS functionality:
# 1. Sign up at https://www.twilio.com/
# 2. Install twilio package: npm install twilio
# 3. Get your Account SID, Auth Token, and phone number from Twilio console
# 4. Uncomment and fill in the values below
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# SMTP Configuration (Alternative email settings)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
